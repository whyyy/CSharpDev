<UserControl
    x:Class="ResultsModule.Views.ResultsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label
            x:Name="DrawingStatus"
            Grid.Column="1"
            MaxWidth="300"
            MaxHeight="50"
            HorizontalAlignment="Center"
            Content="{Binding DrawingStatus}"
            Visibility="Visible" />
        <Label
            x:Name="LuckyNumber"
            Grid.Row="1"
            Grid.Column="1"
            MaxWidth="300"
            MaxHeight="50"
            HorizontalAlignment="Center"
            Content="{Binding LuckyNumber}"
            Visibility="Visible" />
        <Label
            x:Name="DrawingTotalTimeInSeconds"
            Grid.Row="2"
            Grid.Column="1"
            MaxWidth="300"
            MaxHeight="50"
            HorizontalAlignment="Center"
            Content="{Binding DrawingTotalTimeInSeconds}"
            Visibility="Visible" />
    </Grid>
</UserControl>